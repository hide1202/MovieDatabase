<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="result"
            type="io.viewpoint.moviedatabase.model.ui.SearchResultModel" />

        <variable
            name="vm"
            type="io.viewpoint.moviedatabase.viewmodel.search.MovieSearchResultDetailViewModel" />

        <import type="io.viewpoint.moviedatabase.platform.externsion.Dimensions" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".platform.ui.search.SearchResultDetailActivity">

        <ImageView
            android:id="@+id/backdrop"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            app:imageUrl="@{result.backdropUrl}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@color/dark_gray" />

        <ImageView
            android:id="@+id/poster"
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            android:transitionName="@string/result_to_detail_transition"
            app:borderColor="@{@color/white}"
            app:borderWidth="@{Dimensions.dp(3)}"
            app:imageUrl="@{result.posterUrl}"
            app:layout_constraintBottom_toBottomOf="@id/backdrop"
            app:layout_constraintStart_toStartOf="@id/backdrop"
            app:layout_constraintTop_toBottomOf="@id/backdrop"
            tools:background="@color/gray" />

        <ImageView
            android:id="@+id/flag"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            app:flag="@{vm.country}"
            app:layout_constraintBottom_toBottomOf="@id/poster"
            app:layout_constraintStart_toEndOf="@id/poster" />

        <TextView
            android:id="@+id/release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:text="@{@string/release_date(result.releaseDate)}"
            app:gone="@{result.releaseDate == null}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backdrop"
            tools:text="@string/release_date" />

        <TextView
            android:id="@+id/vote"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_vote"
            android:drawableTop="@drawable/ic_star"
            android:gravity="center"
            android:padding="8dp"
            android:text="@{String.valueOf(result.vote)}"
            android:textColor="@color/vote_count_text"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@id/backdrop"
            app:layout_constraintEnd_toEndOf="@id/backdrop"
            tools:ignore="SpUsage"
            tools:text="10.0" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@{result.title}"
            android:textColor="@color/search_title_text"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@id/want_to_see"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/poster"
            tools:text="스파이더맨: 홈커밍" />

        <FrameLayout
            android:id="@+id/want_to_see"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="16dp"
            app:command="@{vm.invertWantToSeeCommand}"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/title">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_heart_check"
                android:button="@null"
                android:checked="@{vm.wantToSee}"
                android:clickable="false"
                android:focusable="false" />
        </FrameLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/originalTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{result.originalTitle}"
            android:textColor="@color/search_description_text"
            android:textSize="15sp"
            app:gone="@{result.originalTitle == null}"
            app:layout_constraintEnd_toEndOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:text="Spiderman" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/genreList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="@id/want_to_see"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/originalTitle"
            tools:listitem="@layout/item_genre" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/genreList">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{result.overview}"
                android:textColor="@color/search_description_text"
                android:textSize="14sp"
                tools:text="토니 스타크(로버트 다우니 주니어)의 제안을 받고 시빌 워에 참여한 피터 파커(톰 홀랜드)은 다음 임무가 언제일지 설렘을 안고 하루하루를 보낸다. 토니는 MIT 진학 준비에 전념할 것을 권하지만 친절한" />
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>